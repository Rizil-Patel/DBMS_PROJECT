<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PNR Status | Yatra.com</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/footer.css" />


  <style>
    form{
        display: flex;
    }
  </style>
</head>

<body>


  <nav>
    <div class="left">
      <img src="./photos/yaatra.jpg" alt="" width="90px" height="80px" class="logo" />
    </div>
    <div class="middle">
      <a href="#page1">Home</a>
      <a href="">About us</a>
      <a href="#footer">Contact</a>
    </div>
    <div class="right">
      <div class="dropdown">
        <i class="fas fa-user-circle" id="profileicon"></i>
        <div class="dropdown_content">
          <span class="profile">Profile</span>
          <a href="/login1" class="login">Login</a>
          <a href="/register1" class="register">Register</a>
          <span class="paymenthistory">Payment History</span>
          <span class="logout">Log Out</span>
        </div>
      </div>
    </div>
  </nav>

  <!-- page-1 -->
  <div id="page1">
    <div id="option">
      <a href="/book_train1" class="opt_1">Book Trains</a>
      <a href="/new_pnr_status" class="opt_2"
        style="background-color:#e9f0f0; width:197px; padding:5px; border-radius: 10px 10px 0 0; color: #ED5B25;">Check
        PNR Status</a>
      <a href="/run_status1" class="opt_3">Running Status</a>
      <a href="/train_details1" class="opt_4">Search Train</a>
    </div>

    <div class="pnr_status">
      <div class="pnr_info">
        <img src="./photos/pnr.png" alt="">
        <p style="margin-right: 10px;">Know your current status of your train ticket.</p>
      </div>
      <form action="/new_pnr_status_result" method="post">
      <div style="margin-left: 5rem;" class="pnr_no">
        <label for="no">PNR number</label><br><br>
        <input type="number" name="pnrNo" id="pnrNo" placeholder="Enter PNR number">
      </div>
      <button style="margin-left: 12rem;" type="submit" class="pnr_search">Search</button>
    </form>
    </div>

  </div>
  <footer id="footer">
    <div class="footer_left">
      <img src="/photos/yaatra.jpg" alt="">
      <div class="footer_info">
        <p>Book Train Tickets Quickly.</p>
        <p>Enjoy free Cancellation.</p>
      </div>
    </div>
    <div class="contact_us">
      <p>Customer Care Number: +123456789</p>
      <p>24x7 free service</p>
    </div>
    <div class="copyright">
      <p>&copy; Yatra.com</p>
      <p>All rights reserved by respective owners.</p>
    </div>
  </footer>

  <script>

    const home = document.querySelector(".logo");
    home.addEventListener("click", () => {
      window.location.href = 'index.html';
    })

  </script>

