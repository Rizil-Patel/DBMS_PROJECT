<div class="Modal">
    <div class="num_input">
        <h3>Live running status</h3>
        <div class="Form">
            <input type="number" placeholder="Train Number" id="TrainNo">
            <button>Find Live Status</button>
        </div>
        <div class="reference_link">
            <a href="/book_train1">Train Booking</a>
            <a href="new_pnr_status.ejs">Train Running Status</a>
        </div>
    </div>
    <div class="ticketContainer">
        <div class="trainDetails">
            <p>Live Train Details</p>
            <strong>Train Number</strong>
            <h4> <%= results[0].TRAINNUMBER %></h4>

            <div class="trainInfoContainer">
                <div class="train_info">
                    <h3> <%= results[0].TRAINNAME %></h3>
                    <h4> <%= results[0].STATUS %></h4>
                    <div class="from-to">
                        <p style="margin-left: -4rem;"><strong>Departure:</strong> <%= results[0].DEPARTURESTATION %><p>
                        <p><strong>Arrival:</strong>  <%= results[0].ARRIVALSTATION %></p>
                    </div>
                    <hr>
                </div>
                <div class="liveStatus">
                    <div class="lastStation">
                        <p><strong>Last Station:</strong> Station G</p>
                        <p><strong>Departure Time:</strong><%= results[0].DEPARTURETIME %></p>
                    </div>
                    <div class="nextStation">
                        <p><strong>Next Station:</strong> Station H</p>
                        <p><strong>Arrival Time:</strong> <%= results[0].ARRIVALTIME %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<footer id="footer">
    <div class="footer_left">
      <img src="/photos/yaatra.jpg" alt="">
      <div class="footer_info">
        <p>Book Train Tickets Quickly.</p>
        <p>Enjoy free Cancellation.</p>
      </div>
    </div>
    <div class="contact_us">
      <p>Customer Care Number: +123456789</p>
      <p>24x7 free service</p>
    </div>
    <div class="copyright">
      <p>&copy; Yatra.com</p>
      <p>All rights reserved by respective owners.</p>
    </div>
  </footer>

