    <div class="Modal">
      <div class="num_input">
        <h3>Train Details</h3>
        <div class="Form">
          <input type="number" placeholder="Train Number" id="TrainNo" />
          <button>Find Live Status</button>
        </div>
        <div class="reference_link">
          <a href="book_train.html">Train Booking</a>
          <a href="pnr_status.html">Train Running Status</a>
        </div>
      </div>
      <div class="ticketContainer">
        <div class="trainDetails">
          <% if (trainResults) { %>

          <p>Train Details</p>
          <% trainResults.forEach(train => { %>

          <div class="trainInfoContainer">
            <div class="train_info">
              <h3><%= train.TRAINNAME %></h3>
              <div class="from-to">
                <p>Departure: <%= train.DEPARTURE %></p>
                <p>Arrival: <%= train.ARRIVAL %></p>
              </div>
              <hr />
              <div class="time-info">
                <div class="departure">
                  <p style="font-size: 30px; padding-top: 20px">
                    <%= train.DEPARTURE_TIME %>
                  </p>
                </div>
                <span style="padding-top: 30px"
                  >---------------------------</span
                >
                <p style="padding-top: 30px"><%= train.DURATION %></p>
                <span style="padding-top: 30px"
                  >---------------------------</span
                >
                <div class="arrival">
                  <p style="font-size: 30px; padding-top: 20px">
                    <%= train.ARRIVAL_TIME %>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="stationDetails">
            <div class="station"><%= train.STOPA %></div>
            <div class="station"><%= train.STOPB %></div>
            <div class="station"><%= train.STOPC %></div>
            <div class="station"><%= train.STOPD %></div>
            <div class="station"><%= train.STOPE %></div>
          </div>
        </div>
        <% }); %> <% } else { %>
        <p>No results found for the given train name or number.</p>
        <% } %>
      </div>
    </div>
