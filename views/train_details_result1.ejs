  <style>
    * {
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }

    body {
      overflow-x: hidden;
      background-color: rgb(237, 91, 38, 0.2);
    }

    .Modal {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      height: auto;
      width: 100vw;
      overflow-x: hidden;
    }

    .num_input {
      width: 100%;
      height: 40%;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      background-color: #9b2447;
      margin-bottom: 60px;
    }

    .num_input h3 {
      color: #e9f0f0;
      font-size: 30px;
      font-family: "Times New Roman", Times, serif;
      margin-bottom: 30px;
    }

    .Form {
      width: 60%;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 20px;
    }

    .Form input {
      width: 65%;
      height: 40px;
      padding: 5px;
      outline: none;
    }

    .Form button {
      box-sizing: border-box;
      width: 30%;
      height: 39px;
      border: 1px solid #ed5b25;
      background-color: #ed5b25;
      color: #e9f0f0;
      font-size: 20px;
    }

    .reference_link {
      width: 40%;
      height: 50px;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 30px;
      margin-bottom: 10px;
    }

    .reference_link a {
      text-decoration: none;
      color: #2e2c2b;
      border: 1px solid #ed5b25;
      padding: 10px;
      background-color: #feebe6;
      border-radius: 5px;
      font-size: 17px;
    }

    .trainDetails {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      gap: 20px;
    }

    .trainDetails p,
    .passengerDetails p {
      font-size: 20px;
    }

    .ticketContainer {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    .trainInfoContainer {
      width: 70vw;
      height: 160px;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      margin-bottom: 30px;
      background-color: #f0f0f0;
      border-radius: 10px;
    }

    .train_info {
      height: 60%;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      gap: 10px;
      padding: 30px;
      margin-left: 10px;
      border-radius: 10px 10px 0 0;
    }

    .train_info h3 {
      font-size: 25px;
    }

    hr {
      position: relative;
      right: 0.5%;
      width: 70vw;
      color: #676363;
      background-color: #676363;
      height: 20px;
    }

    .from-to {
      height: 100%;
      width: 60%;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: row;
      gap: 50px;
      /* margin-left: 100px; */
    }

    .time-info {
      width: 70%;
      height: 100%;
      display: flex;
      justify-content: space-around;
      align-items: center;
      flex-direction: row;
      padding-bottom: 25px;
    }

    .departure {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    .stationDetails {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 30px;
    }

    .station {
      width: 100px;
      height: 50px;
      background-color: #e9f0f0;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 10px;
    }
  </style>
